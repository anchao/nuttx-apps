#
# For a description of the syntax of this configuration file,
# see the file kconfig-language.txt in the NuttX tools repository.
#

menuconfig EXAMPLES_LVGLDEMO
	tristate "LVGL Demo"
	depends on GRAPHICS_LVGL
	select LV_FONT_MONTSERRAT_12
	select LV_FONT_MONTSERRAT_16
	select LV_FONT_MONTSERRAT_22
	select LV_FONT_MONTSERRAT_32
	default n
	---help---
		Enable build the Light and Versatile Graphics Library Demo programs

if EXAMPLES_LVGLDEMO

config EXAMPLES_LVGLDEMO_EX_KEYBOARD
	bool "Enable keyboard support"
	default n

config EXAMPLES_LVGLDEMO_EX_MOUSEWHEEL
	bool "Enable encoder (mouse wheel) support"
	default n

menu "Widgets"

config EXAMPLES_LVGLDEMO_WIDGETS_SLIDESHOW
	bool "Enable Slideshow mode"
	default n
	---help---
		Slideshow mode consists of a non-interactive demonstration of the
		Widgets example.

endmenu

menu "Music"

config EXAMPLES_LVGLDEMO_MUSIC_SQUARE
	bool "Enable Square"
	default n

config EXAMPLES_LVGLDEMO_MUSIC_LANDSCAPE
	bool "Enable Landscape"
	default n

config EXAMPLES_LVGLDEMO_MUSIC_ROUND
	bool "Enable Round"
	default n

config EXAMPLES_LVGLDEMO_MUSIC_LARGE
	bool "Enable Large"
	default n

config EXAMPLES_LVGLDEMO_MUSIC_AUTO_PLAY
	bool "Enable Autoplay"
	default n

endmenu

config EXAMPLES_LVGLDEMO_PRIORITY
	int "lvgldemo task priority"
	default 100

config EXAMPLES_LVGLDEMO_STACKSIZE
	int "lvgldemo stack size"
	default 32768

endif
